<div class="container">
  <div class="row">
    <div class="span4 offset4 well">
      <legend>Please Sign In</legend>
      <%= simple_form_for(@user_session, :html => {:class => 'form-inline' }) do |f| %>
        <% if @user_session.errors.any? %>
          <% flash[:error] = @user_session.errors.full_messages %>
        <% end %>

        <%= f.input :username, :class => 'text_field', :placeholder => :username %>
        <%= f.input :password, :class => 'password_field', :placeholder => :password %>
    
        <%= f.submit "Login", :class => 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>